{
  "name": "unit-simulator",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n server,client -c blue,green \"dotnet run --project UnitSimulator.Server -- --server --port 5001\" \"npm run dev --prefix sim-studio\"",
    "build": "dotnet build UnitSimulator.Server && npm run build --prefix sim-studio",
    "server": "dotnet run --project UnitSimulator.Server -- --server --port 5001",
    "client": "npm run dev --prefix sim-studio",
    "data:normalize": "node scripts/normalize.js",
    "data:diff": "node scripts/diff.js",
    "data:build": "node scripts/build.js",
    "data:validate": "npm run data:validate:units && npm run data:validate:skills && npm run data:validate:towers && npm run data:validate:waves && npm run data:validate:balance",
    "data:validate:units": "ajv validate -s data/schemas/unit-stats.schema.json -d data/references/units.json",
    "data:validate:skills": "ajv validate -s data/schemas/skill-reference.schema.json -d data/references/skills.json",
    "data:validate:towers": "ajv validate -s data/schemas/tower-reference.schema.json -d data/references/towers.json",
    "data:validate:waves": "ajv validate -s data/schemas/wave-definition.schema.json -d data/references/waves.json",
    "data:validate:balance": "ajv validate -s data/schemas/game-balance.schema.json -d data/references/balance.json",
    "data:validate:processed": "npm run data:validate:processed:units && npm run data:validate:processed:skills && npm run data:validate:processed:towers && npm run data:validate:processed:waves && npm run data:validate:processed:balance",
    "data:validate:processed:units": "ajv validate -s data/schemas/unit-stats.schema.json -d data/processed/units.json",
    "data:validate:processed:skills": "ajv validate -s data/schemas/skill-reference.schema.json -d data/processed/skills.json",
    "data:validate:processed:towers": "ajv validate -s data/schemas/tower-reference.schema.json -d data/processed/towers.json",
    "data:validate:processed:waves": "ajv validate -s data/schemas/wave-definition.schema.json -d data/processed/waves.json",
    "data:validate:processed:balance": "ajv validate -s data/schemas/game-balance.schema.json -d data/processed/balance.json"
  },
  "devDependencies": {
    "ajv-cli": "^5.0.0",
    "ajv-formats": "^3.0.1",
    "concurrently": "^9.1.0"
  }
}
