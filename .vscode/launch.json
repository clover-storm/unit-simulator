{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Test (UnitSimulator.Core.Tests)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "dotnet: build",
      "program": "dotnet",
      "args": [
        "test",
        "UnitSimulator.Core.Tests/UnitSimulator.Core.Tests.csproj",
        "--no-build"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopAtEntry": false
    },
    {
      "name": "UnitSimulator.Server",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "dotnet: build",
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "UnitSimulator.Server",
        "--",
        "--server"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopAtEntry": false
    }
  ]
}
